<div class="row">
	<h1 class="text-center">Hello, <%= @user %>!</h1>
</div>

<div class="row">
	<div class="col-md-8">
		<ul class="list-unstyled">

		  <% @articles.each do |article|%>

		    <li>
		      <h2><%= article.title %></h2>
		      <p class="text-16"><%= article.body %></p>

		      <span>
		      	<%= link_to 'Show', users_article_path(article), :class => 'btn btn-primary btn-xs' %>
		      </span> |
		      <span>
		      	<%= link_to 'Edit', edit_users_article_path(article), :class => 'btn btn-primary btn-xs' %>
		  	  </span> |
		      <span>
		      	<%= link_to 'Delete', users_article_path(article), method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-primary btn-xs' %>
		      </span>
		    </li>

		  <% end %>

		</ul>
	</div>

	<div class="col-md-3">

		<p>
			<%= link_to 'Edit you account', edit_user_registration_path, :class => 'btn btn-primary btn-xs' %>
		</p>

		<p>
			<%= link_to 'Create new article', new_users_article_path, :class => 'btn btn-primary btn-xs' %>
		</p>

		<p>
			<%= link_to 'Sing out', destroy_user_session_path, :method => :delete, :class => 'btn btn-primary btn-xs' %>
		</p>

	</div>
</div>
