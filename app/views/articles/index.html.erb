<div class="row">
  <h1 class="text-center">Hello!</h1>
</div>

<div class="row">
  <div class="col-md-8">
    <% if @articles != nil %>
      <ul class="list-unstyled">
        <% @articles.each do |article|%>

          <li>
		        <h2><%= article.title %></h2>
		        <p class="text-16"><%= article.body %></p>
		        <%= link_to 'Show', article, :class => 'btn btn-primary btn-xs' %>
          </li>

	      <% end %>  
      </ul>
    <% else %>
      <p class="text-16">We have no articles now :(</p>
      <%= link_to 'Create first?', new_user_registration_path, :class => 'btn btn-primary btn-lg btn-block' %>
    <% end %>
  </div>

  <% if @logined %>
    <%= render :partial => 'source/logined_user' %>
  <% else %>
    <%= render :partial => 'source/unlogined_user' %>
  <% end %>
	
</div>
