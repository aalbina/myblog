<%= form_for :article, url: users_article_path(@article), method: :patch do |f| %>

  <% if @article.errors.any? %>

      <% @article.errors.full_messages.each do |message| %>
        <p  class="bg-danger message"> 
          <%= message %>
        </p>
      <% end %>

  <% end %>
  
  <div class="form-group">
    <%= f.label :title, :class => 'text-16'%><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body, :class => 'text-16'%><br>
    <%= f.text_area :body, :class => 'form-control', :rows => 10 %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', :class => 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>
