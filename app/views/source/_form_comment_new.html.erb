<%= form_for @article.comments.build, url: users_articles_path([@article, @article.comments]) do |f| %>

  <% if @article.errors.any? %>

      <% @article.errors.full_messages.each do |message| %>
        <p  class="bg-danger message"> 
          <%= message %>
        </p>
      <% end %>

  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'text-16' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body, :class => 'text-16' %>
    <%= f.text_area :body, :class => 'form-control', :rows => 10 %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>